{
    "name": "latex",
    "image": "singhramanpreet/vscode-devcontainers:latex-latest",
    // uncomment and edit below to install missing packages
    //"postCreateCommand": [
    //    "sudo",
    //    "tlmgr",
    //    "install",
    //    "<package1>",
    //    "<package2>"
    //],
    "extensions": [
        "james-yu.latex-workshop",
        "streetsidesoftware.code-spell-checker"
    ],
    "settings": {
        "terminal.integrated.inheritEnv": true,
        "editor.formatOnPaste": true,
        "editor.formatOnSave": true,
        "latex-workshop.viewer.pdf.internal.port": 9000,
        "cSpell.enabledLanguageIds": [
            "latex"
        ]
    },
    "forwardPorts": [
        9000
    ],
    "remoteUser": "vscode",
    "shutdownAction": "stopContainer"
}